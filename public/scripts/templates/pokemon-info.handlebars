<div class="pokemons">
   {{#each this}}
    <div class="col-lg-3 col-md-4 col-sm-6 col-xs-12 pokemon" data-id="{{id}}">
              <img src="https://raw.githubusercontent.com/PokeAPI/sprites/master/sprites/pokemon/{{id}}.png" class="col-lg-12 col-md-12 col-sm-12 col-xs-12" alt="Pokemon Image" />
              <label class="col-lg-6 col-md-6 col-sm-6 col-xs-12" for="Name">Name:</label><p class="col-lg-6 col-md-6 col-sm-6 col-xs-12">{{name}}</p>
              <label class="col-lg-6 col-md-6 col-sm-6 col-xs-12" for="Type">Type:</label><p class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                {{#each types}}
              <span>Type: <strong>{{type.name}}</strong></span>
               {{/each}}
                </p>
              <label class="col-lg-6 col-md-6 col-sm-6 col-xs-12" for="Height">Height:</label><p class="col-lg-6 col-md-6 col-sm-6 col-xs-12">{{height}}</p>
              <label class="col-lg-6 col-md-6 col-sm-6 col-xs-12" for="Weight">Weight:</label><p class="col-lg-6 col-md-6 col-sm-6 col-xs-12">{{weight}}</p>
    </div>
    {{/each}}
</div>
