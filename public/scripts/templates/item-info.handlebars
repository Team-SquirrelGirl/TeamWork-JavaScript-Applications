<div class="items">
    <div class="col-lg-3 col-md-4 col-sm-6 col-xs-12 item" data-id="{{id}}">
              <img src="{{sprites.default}}" class="col-lg-12 col-md-12 col-sm-12 col-xs-12" alt="Item Image" />
              <label class="item-stats col-lg-6 col-md-6 col-sm-6 col-xs-12" for="Name">Name:</label>
              <p class="item-name col-lg-6 col-md-6 col-sm-6 col-xs-12">{{name}}</p>
              <label class="item-stats col-lg-6 col-md-6 col-sm-6 col-xs-12" for="Name">Category:</label>
              <p class="item-name col-lg-6 col-md-6 col-sm-6 col-xs-12">{{category.name}}</p>
              {{#effect_entries}}
                <label class="item-stats col-lg-6 col-md-6 col-sm-6 col-xs-12" for="Effect">Effect:</label>
                <p class="item-name col-lg-6 col-md-6 col-sm-6 col-xs-12">{{effect}}</p>
              {{/effect_entries}}
    </div>
</div>